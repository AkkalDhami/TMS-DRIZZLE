<aside id="sideNav"
    class="fixed top-[49px] bg-white dark:bg-zinc-900 left-0 h-full z-40 p-5 space-y-6 w-[250px] md:block -translate-x-full md:translate-x-0 transition-all duration-300 transition-width pb-8 max-h-screen overflow-y-auto sm:mt-4">


    <!-- Sidebar Nav -->
    <nav class="flex flex-col w-full text-dark space-y-2">

        <a href="/admin/dashboard"
            class="items-center space-x-3 p-3 border-r-4  <%= location === '/admin/dashboard' ? 'text-orange-500 bg-orange-500/10 border-orange-500' : 'border-transparent' %> hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-dashboard-line text-xl"></i>
            <span class="sidebar-label">Dashboard</span>
        </a>

        <a href="/task"
            class="items-center space-x-3 p-3 border-r-4  <%= location === '/task' ? 'text-orange-500 bg-orange-500/10 border-orange-500' : 'border-transparent' %> hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-list-check text-xl"></i>
            <span class="sidebar-label">My Tasks</span>
        </a>


        <a href="/all-tasks"
            class="items-center space-x-3 p-3 border-r-4  <%= location === '/all-tasks' ? 'text-orange-500 bg-orange-500/10 border-orange-500' : 'border-transparent' %> hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-task-line text-xl"></i>
            <span class="sidebar-label">All Tasks</span>
        </a>


        <a href="/task/calender"
            class="items-center space-x-3 p-3 border-r-4  <%= location === '/calender' ? 'text-orange-500 bg-orange-500/10 border-orange-500' : 'border-transparent' %> hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-calendar-2-line text-xl"></i>
            <span class="sidebar-label">Calender</span>
        </a>


        <a href="/task-details"
            class="items-center space-x-3 p-3 border-r-4  <%= location === '/task-details' ? 'text-orange-500  bg-orange-500/10 border-orange-500' : 'border-transparent hidden' %> hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-task-line text-xl"></i>
            <span class="sidebar-label">Task Details</span>
        </a>


        <a href="/auth/profile"
            class="items-center space-x-3 p-3 border-r-4   border-transparent hover:text-orange-500 hover:bg-orange-500/10 transition">
            <i class="ri-user-line text-xl"></i>
            <span class="sidebar-label">My Profile</span>
        </a>
    </nav>

    <div class="mt-auto border-t border-zinc-500/30 mb-8 sm:mb-0 pt-4">
        <form action="/admin/logout" method="post">
            <button
                class="flex w-full items-center cursor-pointer space-x-3 p-3  hover:bg-red-500/10 text-red-600 transition">
                <i class="ri-logout-box-r-line text-xl"></i>
                <span class="sidebar-label">Logout</span>
            </button>
        </form>
    </div>

</aside>
<div id="overlay" class="fixed inset-0 bg-black/20 backdrop-blur-[2px] hidden z-30 md:hidden"></div>
<div id="toastContainer" class="fixed top-[80px] right-[20px] z-[111]"></div>